# ============================================
# Bi Ads Multi Tool PRO - Environment Configuration
# Version: 3.0.0
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./data/bi_ads.db

# ============================================
# FACEBOOK APP CREDENTIALS
# ============================================
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here
FACEBOOK_VERIFY_TOKEN=bi-ads-verify-token-2025

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Chat ID (get from @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================
# API SERVER CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS origins
CORS_ORIGINS=*

# ============================================
# SECURITY CONFIGURATION
# ============================================
SECRET_KEY=bi-ads-secret-key-production-2025

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/bi_ads.log

# ============================================
# NOTIFICATION SETTINGS
# ============================================
NOTIFY_ON_TASK_COMPLETE=true
NOTIFY_ON_TASK_FAILED=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_WARNING=true

# ============================================
# DEVELOPMENT/DEBUG
# ============================================
DEBUG=false
ENVIRONMENT=production
