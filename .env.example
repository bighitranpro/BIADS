# ============================================
# Bi Ads Multi Tool PRO - Environment Configuration
# Version: 3.0.0
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./bi_ads.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/bi_ads

# ============================================
# FACEBOOK APP CREDENTIALS
# ============================================
# Get these from https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here

# Webhook verification token (you choose this)
FACEBOOK_VERIFY_TOKEN=bi-ads-verify-token-change-this

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram chat ID (or group chat ID)
# Get it by messaging @userinfobot on Telegram
TELEGRAM_CHAT_ID=123456789

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
# For caching and task queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# CELERY CONFIGURATION (Optional)
# ============================================
# For distributed task processing
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ============================================
# API SERVER CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS origins (comma-separated)
CORS_ORIGINS=*

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Secret key for JWT tokens
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT token expiration (in seconds)
TOKEN_EXPIRE_SECONDS=86400

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/bi_ads.log
LOG_FORMAT=json

# ============================================
# CHROMEDRIVER CONFIGURATION
# ============================================
# Path to ChromeDriver (leave empty for auto-detect)
CHROMEDRIVER_PATH=

# Headless mode (true/false)
HEADLESS=false

# Chrome binary path (optional)
CHROME_BINARY_PATH=

# ============================================
# PROXY CONFIGURATION
# ============================================
# Default proxy rotation strategy
PROXY_ROTATION=round-robin

# Proxy timeout (seconds)
PROXY_TIMEOUT=30

# ============================================
# TASK CONFIGURATION
# ============================================
# Max concurrent tasks
MAX_CONCURRENT_TASKS=5

# Task timeout (seconds)
TASK_TIMEOUT=300

# Retry failed tasks
RETRY_FAILED_TASKS=true
MAX_RETRIES=3

# ============================================
# RATE LIMITING
# ============================================
# Delay between actions (seconds)
ACTION_DELAY_MIN=5
ACTION_DELAY_MAX=15

# Max actions per hour
MAX_ACTIONS_PER_HOUR=100

# ============================================
# NOTIFICATION SETTINGS
# ============================================
# Send notifications for
NOTIFY_ON_TASK_COMPLETE=true
NOTIFY_ON_TASK_FAILED=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_WARNING=false

# ============================================
# BACKUP CONFIGURATION
# ============================================
# Auto backup database
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# ============================================
# DEVELOPMENT/DEBUG
# ============================================
DEBUG=false
ENVIRONMENT=production
